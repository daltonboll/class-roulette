<%= simple_form_for(@lecture, url: course_lectures_path(@course)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :day, :collection => ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'], required: true %>
    <%= f.input :time, as: :datetime, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
