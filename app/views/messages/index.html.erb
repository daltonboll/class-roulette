<p id="notice"><%= notice %></p>

<h1>Listing Messages</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lecture.messages.each do |message| %>
      <tr>
        <td><%= message.text %></td>
        <td><%= link_to 'Show', course_lecture_message_path(@course, @lecture, message) %></td>
        <% if user_signed_in? and current_user.is_admin %>
        <td><%= link_to 'Edit', edit_course_lecture_message_path(@course, @lecture, message) %></td>
        <td><%= link_to 'Destroy', course_lecture_message_path(@course, @lecture, message), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? and current_user.is_admin %>
<%= link_to 'New Message', new_course_lecture_message_path(@course, @lecture) %>
<% end %>
